{
    "compilerOptions": {
        "baseUrl": ".",
        "strict": true,
        "module": "es6",
        "target": "es6",
        "esModuleInterop": true,
        "sourceMap": false,
        "rootDir": "/",
        "outDir": "dist",
        "noEmitOnError": true,
        "noImplicitAny": false,
        "moduleResolution": "node",
        "strictPropertyInitialization": false,
        "typeRoots": [
            "node_modules/@types"
        ],
        "jsx": "react-jsx",
        "paths": {
            "@/*": ["src/*"],
            "@models/*": ["src/models/*"],
            "@options/*": ["src/options/*"],
            "@popup/*": ["src/popup/*"],
            "@context/*": ["src/context/*"],
            "@assets/*": ["src/assets/*"],
            "@components/*": ["src/options/components/*"],
            "@pages/*": ["src/options/pages/*"],
            "@services/*": ["src/services/*"],
            "@common/*": ["src/options/components/common/*"],
            "@utils/*": ["src/utils/*"],
        },
    },
    "include": [
        "src"
    ],
    "compileOnSave": true,
    "files": [
        "src/types/svg.ts",
    ],
 }
